<%= form_tag sessions_path, :method => :post do %>

<div class="form-group">
   <%= label_tag :email %>
   <%= email_field_tag :email, nil, class: 'form-control', required: true %>
 </div>

 <div class="form-group">
   <%= label_tag :password %>
   <%= password_field_tag :password, nil, class: 'form-control', required: true %>
 </div>

  <%= submit_tag 'Log In', class: 'btn btn-default btn-lg' %>
  <div class="form-group" style="margin-top: 10px;">
    <%= label_tag :remember_me %>
    <%= check_box_tag :remember_me, class: 'checkbox' %>
  </div>
  <p><%= link_to 'Forgot your password?', new_reset_password_path %> Check out this link.</p>
<% end %>
