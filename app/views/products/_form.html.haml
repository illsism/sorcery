= form_for(@product) do |f|
  - if @product.errors.any?
    #error_explanation
      %h2
        = pluralize(@product.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - @product.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.text_field :title, class: 'form-control', placeholder: 'Name', autofocus: true
  .form-group
    = f.text_area :description, class: 'form-control', placeholder: 'Description'
  .form-group
    = f.text_field :image_file, class: 'form-control', placeholder: 'Image URL'
  .form-group
    = f.text_field :price, class: 'form-control', placeholder: 'Price (â‚¬)'
  = f.submit class: 'btn btn-default'
