<p id="notice"><%= notice %></p>
<div class="col-md-3" id="product-image-file-show">
  <%= image_tag(@product.image_file, size:'230x230') if @product.image_file? %>
</div>
<div class="col-md-9">
  <p>
    <strong>Title:</strong>
    <%= @product.title %>
  </p>

  <p style="word-wrap: break-word;">
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <p>
    <strong>User:</strong>
    <%= @product.user.name %>
  </p>
  <div class="btn-group">
    <% if logged_in? %>
      <% if current_user.products.include?(@product) || current_user.admin %>
        <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-default" %>
      <% end %>
    <% end %>
    <%= link_to 'Back', products_path, class: "btn btn-default"  %>
  </div>
</div>
