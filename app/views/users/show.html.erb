<div class="col-md-3" id="profile-picture">
  <%= image_tag(@user.picture, size:'230x230') if @user.picture? %>
  <%= image_tag("#{asset_path('users/image_missing.jpg')}", size: '230x230') if @user.picture.blank? %>
</div>
<div class="col-md-9">
  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>
  <div class="btn-group" style="margin-top: 30px;">
  <% if logged_in? %>
    <% if @user == current_user || current_user.admin %>
      <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-default' %>
    <% end %>
    <% if @user != current_user %>
      <%= link_to 'Send message', new_message_path(:user => @user.id), class: 'btn btn-default' %>
    <% end %>
  <% end %>
  <%= link_to 'Back', users_path, class: 'btn btn-default' %>
  </div>
</div>
