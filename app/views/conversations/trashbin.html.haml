.col-md-offset-3.col-md-6
  %br>/
  \\&gt;
  = succeed "\\>" do
    %br/
  .container
    .well
      .title
        %h1 Conversations
      %h2{:style => "float:right"}
        %a.btn.btn-default{:href => ""}
        = conversations_path
        "&gt; Inbox #{@conversations.count}
      %a.btn.btn-default{:href => ""}
      = trashbin_conversations_path
      "&gt;  Trash #{@trashcount.count}
  %br
    %h3 Trash
    - if @trashcount.count  0
      = button_to 'Empty Trash', 'empty_trash', :confirm = 'Empty trash?', :class = 'btn btn-primary btn-danger'
    = succeed "\\>" do
      %br/
    - if @trash == nil || @trash.empty?
      %i Your Trash folder is currently empty
    %table.table.table-striped{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "900"}
      %tr
        %th.emailTH{:scope => "col"} SENDER
        %th.emailTH{:scope => "col"} SUBJECT
        %th.emailTH{:scope => "col"} DATE
        %th.emailTH{:scope => "col"}
      - @trash.each do |conversation|
        %tr
          %td.emailTD
            - conversation.participants.each do |participant|
              - if participant != current_user
              - if participant != current_user
                %b
                  = participant.name
          %td.emailsubjectTD
            = link_to conversation.subject, conversation_path(conversation)
          %td.emailTD= conversation.updated_at.strftime(%a, %m/%e/%Y %I:%M %p)
          %td.emailtrashTD
            = link_to 'i class=fa fa-inbox fa-2x/i'.html_safe, {:controller = conversations, :action = untrash, :id = conversation.id},  :title = Move to Inbox, :method='post'
  = will_paginate @trash
